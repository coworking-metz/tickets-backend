{
  "name": "@coworking-metz/tickets-backend",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node server",
    "dev": "nodemon --ignore 'mock/*.json' --ignore 'data/*.json' server",
    "database:clean": "docker-compose down && docker volume rm tickets-backend_mongodb_data && docker-compose up -d",
    "database:fetch": "mkdir -p ./archives/ && scp ubuntu@api.coworking-metz.fr://srv/backups/mongo-dumps/$(date +%Y-%m-%d)-00-00-01-mongo-tickets.mongoarchive.gz ./archives/",
    "database:restore": "docker exec -i tickets-backend-mongodb /usr/bin/mongorestore --nsInclude=\"tickets.*\" --gzip --archive < ./$(ls -1t archives/*.mongoarchive.gz | head -n 1)",
    "database:sync": "npm run database:fetch && npm run database:clean && npm run database:restore",
    "lint": "xo",
    "lint:format": "xo --fix",
    "test": "ava"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "got": "^13.0.0",
    "http-errors": "^2.0.0",
    "ical-expander": "^3.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash-es": "^4.17.21",
    "mongodb": "^4.17.1",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.4",
    "nodemailer": "^6.9.5",
    "p-map": "^7.0.1",
    "papaparse": "^5.4.1",
    "passport": "^0.6.0",
    "passport-oauth2": "^1.7.0"
  },
  "devDependencies": {
    "ava": "^5.3.1",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "xo": "^0.56.0"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "camelcase": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "unicorn/prevent-abbreviations": "off",
      "import/no-unassigned-import": "off",
      "import/order": "off"
    }
  },
  "engines": {
    "node": ">=20.9"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
